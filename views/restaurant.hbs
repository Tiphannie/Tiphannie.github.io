{{!-- context = { restaurant } --}}
{{#with restaurant as |r|}} 

  <header>
    <h1>{{r.name}}</h1>
    {{> stars rating=r.rating}}
    <address>{{r.address}}</address>
  </header>

  <nav class="tabs">
    <a href="#about">About</a>
    <a href="#menu">Menu</a>
    <a href="#reviews">Reviews</a>
    <a href="#map">Map</a>
  </nav>

  <main id="about">
    <h2>About</h2>
    <p>{{r.description}}</p>

    <h2 id="menu">Menu snippet</h2>
    <ul>
      {{#each r.menu}}
        <li>{{name}} – €{{price}}</li>
      {{/each}}
    </ul>

    <h2 id="reviews">Latest reviews</h2>
    {{#each r.reviews}}
      <article>
        <h3>“{{text}}” – {{author}}</h3>
        {{> stars rating=this.rating}}
      </article>
    {{/each}}

    <h2 id="map">Find us</h2>
    <iframe
      src="https://www.openstreetmap.org/export/embed.html?marker={{r.lat}},{{r.lng}}"
      loading="lazy" width="100%" height="300" title="Map">
    </iframe>
  </main>

  <footer>&copy; Spot-A-Dönner 2025</footer>
{{/with}}
